syntax on

set nocompatible

set visualbell

set showmode
set showcmd
set ruler

set guifont=Consolas:h12
set guioptions -=T

set number
set relativenumber
set cursorline

set scrolloff=5

set incsearch
set hlsearch
set showmatch

set wrap
set linebreak

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent

set encoding=utf-8

